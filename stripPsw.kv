#:set links 0.3
#:set rechts 0.7
#:set bh 0.03
#:kivy 1.10.0

<BackgroundColor@Widget>
    background_color: 1, 0.5, 0.5, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0.1, 0.3, 0.5, 0.7
<BackgroundCB@CheckBox+BackgroundColor>
    background_color: 0.1, 0.3, 0.5, 0.7
<RoundedButton@Button>
    background_color: (0.1,0.2,0.3,0.4)
    background_normal: ''
    # background_down: (0,0,0,0)
    font_size: 20
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos:  self.pos
            radius: [12]

<MyLayout>:
    id: my_layout
    # width:  1536
    # height: 1400

    GridLayout:
        id:my_widget
        cols:2
        padding: 10
        spacing: 10
        FileChooserListView:
            id: filechooser
            size_hint: (links, 1)
            on_selection: my_layout.selected(filechooser.selection)
            multiselect: False
            filters: [root.dir_filter]

        Image:
            id:image
            size_hint: (rechts, 1)
            source:""
            background_color: 0.2, 0.3, 0.3, 0.6

        BackgroundLabel:
            text:'pdf nach Öffnung löschen'
            size_hint: (links, bh)
            pos_hint: {"right":1, "center_y":0.5}
            # pos_hint: {'left': 0.9}
            background_color: 0.2, 0.3, 0.3, 0.6
        BackgroundCB:
            id: delSource
            active: True
            pos_hint: {"left":1, "center_y":0.5}
            size_hint: (rechts, bh)
            background_color: 0.2, 0.3, 0.3, 0.6


        RoundedButton:
            id: links_but
            text: "pdf entschlüsseln"
            pos_hint: {'center_x': 0.5}
            size_hint: (links, bh)
            on_press: my_layout.decrypt()
        RoundedButton:
            id: rechts_but
            text: "Ende"
            pos_hint: {'center_x': 0.5}
            size_hint: (rechts, bh)
            on_press:
                my_layout.removeBild()
                app.stop()
